<h2>Victory Points</h2>
<% for(let i = 0; i < playerData.length; ++i) { %>
    <input type="text" id="player-name-<%= i %>" value="<%= playerData[i].name %>" placeholder="Player <%= i + 1 %> Name" />
    <input type="number" id="player-resource-<%= i %>" value="<%= playerData[i].victoryPoints %>" placeholder="0" min="0" />
<% } %>
<button onclick="setVictoryPoints(); next();">Next</button>
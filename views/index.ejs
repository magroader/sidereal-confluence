<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sidereal Confluence Scorer</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Sidereal Confluence Scorer</h1>
    <form action="/calculate-scores" method="POST" id="score-form">
      <table id="players-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Victory Points</th>
            <th>Ultratech</th>
            <th>Large Cubes</th>
            <th>Small Cubes</th>
            <th>Ships</th>
          </tr>
        </thead>
        <tbody>
          <% if (players.length === 0) { %>
            <tr class="player">
              <td><input type="text" name="players[0][name]" placeholder="Player Name" required></td>
              <td><input type="number" name="players[0][victoryPoints]" placeholder="Victory Points" required></td>
              <td><input type="number" name="players[0][ultratech]" placeholder="Ultratech" required></td>
              <td><input type="number" name="players[0][largeCubes]" placeholder="Large Cubes" required></td>
              <td><input type="number" name="players[0][smallCubes]" placeholder="Small Cubes" required></td>
              <td><input type="number" name="players[0][ships]" placeholder="Ships" required></td>
            </tr>
          <% } else { %>
            <% players.forEach((player, index) => { %>
              <tr class="player">
                <td><input type="text" name="players[<%= index %>][name]" placeholder="Player Name" value="<%= player.name %>" required></td>
                <td><input type="number" name="players[<%= index %>][victoryPoints]" placeholder="Victory Points" value="<%= player.victoryPoints %>" required></td>
                <td><input type="number" name="players[<%= index %>][ultratech]" placeholder="Ultratech" value="<%= player.ultratech %>" required></td>
                <td><input type="number" name="players[<%= index %>][largeCubes]" placeholder="Large Cubes" value="<%= player.largeCubes %>" required></td>
                <td><input type="number" name="players[<%= index %>][smallCubes]" placeholder="Small Cubes" value="<%= player.smallCubes %>" required></td>
                <td><input type="number" name="players[<%= index %>][ships]" placeholder="Ships" value="<%= player.ships %>" required></td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
      <button type="button" id="add-player">Add Player</button>
      <button type="submit">Calculate Scores</button>
    </form>
  </div>

  <script src="/script.js"></script>
</body>
</html>
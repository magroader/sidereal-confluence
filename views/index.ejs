<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sidereal Confluence Scorer</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Sidereal Confluence Scorer</h1>
    <form action="/calculate-scores" method="POST" id="score-form">
      <div class="table-container">
        <table id="players-table">
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <% if (players.length > 0 && players[0].score !== undefined) { %>
                <th>Final Score</th>
              <% } %>
              <th>Victory Points</th>
              <th>Ultratech</th>
              <th>Large Cubes</th>
              <th>Small Cubes</th>
              <th>Ships</th>
              <th>Regret</th>
            </tr>
          </thead>
          <tbody>
            <% if (players.length === 0) { %>
              <tr class="player">
                <td><button type="button" class="delete-player" data-index="0">Delete</button></td>
                <td><input type="text" name="players[0][name]" placeholder="Player Name" required></td>
                <td><input type="number" name="players[0][victoryPoints]" placeholder="Victory Points"></td>
                <td><input type="number" name="players[0][ultratech]" placeholder="Ultratech"></td>
                <td><input type="number" name="players[0][largeCubes]" placeholder="Large Cubes"></td>
                <td><input type="number" name="players[0][smallCubes]" placeholder="Small Cubes"></td>
                <td><input type="number" name="players[0][ships]" placeholder="Ships"></td>
                <td><input type="number" name="players[0][regret]" placeholder="Regret"></td>
              </tr>
            <% } else { %>
              <% players.forEach((player, index) => { %>
                <tr class="player">
                  <td><button type="button" class="delete-player" data-index="<%= index %>">Delete</button></td>
                  <td><input type="text" name="players[<%= index %>][name]" placeholder="Player Name" value="<%= player.name %>" required></td>
                  <% if (player.score !== undefined) { %>
                    <td class="final-score"><%= player.score %></td>
                  <% } %>
                  <td><input type="number" name="players[<%= index %>][victoryPoints]" placeholder="Victory Points" value="<%= player.victoryPoints %>"></td>
                  <td><input type="number" name="players[<%= index %>][ultratech]" placeholder="Ultratech" value="<%= player.ultratech %>"></td>
                  <td><input type="number" name="players[<%= index %>][largeCubes]" placeholder="Large Cubes" value="<%= player.largeCubes %>"></td>
                  <td><input type="number" name="players[<%= index %>][smallCubes]" placeholder="Small Cubes" value="<%= player.smallCubes %>"></td>
                  <td><input type="number" name="players[<%= index %>][ships]" placeholder="Ships" value="<%= player.ships %>"></td>
                  <td><input type="number" name="players[<%= index %>][regret]" placeholder="Regret" value="<%= player.regret %>"></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
      <button type="button" id="add-player">Add Player</button>
      <button type="submit">Calculate Scores</button>
    </form>
  </div>

  <script src="/script.js"></script>
</body>
</html>